void rightButtonClicked() {
  Serial << "Right button clicked" << endl;
  if (menu == addr) {
    if (address < 100) {
      address++;
    } else {
      address = 0;
    }
    EEPROM.write(0, address);
    EEPROM.commit();
  }
}

void rightButtonHeld() {
  Serial << "Right button held" << endl;
}
