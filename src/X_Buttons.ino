void upButtonClicked() {
  Serial << "Up Button Clicked" << endl;
  if (menu < maxMenus) {
    menu++;
  } else {
    menu = 1;
  }
}

void upButtonHeld() {
  Serial << "Up Button Clicked" << endl;
