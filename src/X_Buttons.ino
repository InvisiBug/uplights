void leftButtonClicked() {
  Serial << "Left Button Clicked" << endl;
  if (menu == addr) {
    if (address > 0) {
      address--;
    } else {
      address = 100;
    }
    EEPROM.write(0, address);
    EEPROM.commit();
  }
}

void leftButtonHeld() {
  Serial << "Left Button Held" << endl;
}
